{
  "usingComponents": {
    "my-com": "/components/com/com",
    "my-com-observers": "/components/comObservers/comObservers",
    "my-com-color": "/components/observersExample/observersExample",
    "my-com-slot": "/components/comSlot/comSlot",
    "van-button": "@vant/weapp/button/index",
    "my-com-store": "components/comStore/comStore",
    "van-tabbar": "@vant/weapp/tabbar/index",
    "van-tabbar-item": "@vant/weapp/tabbar-item/index"

  },
  "pages":[
    "pages/home/home",
    "pages/message/message",
    "pages/concat/concat",
    "pages/test/test",
    "pages/logs/logs",
    "pages/index/index"
  ],
  "subpackages": [
    {
      "root": "pkgA",
      "name": "A",
      "pages": [
        "pages/cat",
        "pages/dog"
      ]
    },
    {
      "root": "pkgB",
      "name": "B",
      "pages": [
        "pages/apple",
        "pages/orange"
      ]
    }
  ],
  "preloadRule": {
    "pages/concat/concat": {
      "packages": ["pkgA"],
      "network": "wifi"
    }
  },

  "window":{
    "backgroundTextStyle":"dark",
    "navigationBarBackgroundColor": "#2b4b6b",
    "navigationBarTitleText": "Weixin",
    "navigationBarTextStyle":"white",
    "enablePullDownRefresh": false,
    "backgroundColor": "#00ff00"
  },
  "sitemapLocation": "sitemap.json",

  "tabBar": {
    "custom": true,
    "list":[
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "/images/tabs/home.png",
        "selectedIconPath": "/images/tabs/home-active.png"
      },
      {
        "pagePath": "pages/message/message",
        "text": "信息",
        "iconPath": "/images/tabs/message.png",
        "selectedIconPath": "/images/tabs/message-active.png"
      },
      {
        "pagePath": "pages/concat/concat",
        "text": "联系",
        "iconPath": "/images/tabs/contact.png",
        "selectedIconPath": "/images/tabs/contact-active.png"
      }
    ]
  }

}
